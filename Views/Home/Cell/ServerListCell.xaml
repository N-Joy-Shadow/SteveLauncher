<?xml version="1.0" encoding="utf-8"?>

<ContentView
    x:Class="SteveLauncher.Views.Home.Cell.ServerListCell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cell="clr-namespace:SteveLauncher.Views.Home.Cell"
    xmlns:motd="clr-namespace:McMotdParser.MAUI.View;assembly=McMotd.MAUI"
    xmlns:pixel="using:SteveLauncher.Views.Components.UI"
    xmlns:type="using:SteveLauncher.Domain.Entity"
    xmlns:ui="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView"
    xmlns:extension="clr-namespace:SteveLauncher.Extension"
    x:DataType="type:MinecraftServerInfo">
    <ui:AcrylicView
        x:Name="CellItem"
        EffectStyle="Light"
        HeightRequest="120"
        HorizontalOptions="Fill"
        IsClippedToBounds="True">
        <ui:AcrylicView.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapped" />
        </ui:AcrylicView.GestureRecognizers>
        <FlyoutBase.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem
                    x:Name="ContextMenu"
                    Clicked="OnContextMenuClicked"
                    Text="서버 삭제" />
            </MenuFlyout>
        </FlyoutBase.ContextFlyout>
        <FlexLayout
            Padding="0,20,20,20"
            Direction="Row"
            HorizontalOptions="Fill"
            JustifyContent="SpaceBetween">
            <HorizontalStackLayout>
                <extension:ImageView
                    SourceFromBase64="{Binding Icon}"
                    HeightRequest="100"
                    WidthRequest="100" Margin="10" />

                <VerticalStackLayout>
                    <Label
                        FontFamily="MonocraftBold"
                        FontSize="24"
                        Text="{Binding HostName.HostName}" />
                    <motd:MotdView Motd="{Binding Motd}" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
            <Label
                FontFamily="MonocraftSemiBold"
                FontSize="24"
                Text="{Binding PlayerInfo.Currnet}"
                VerticalOptions="Center" 
                ToolTipProperties.Text="aaa"/>
        </FlexLayout>
    </ui:AcrylicView>

</ContentView>