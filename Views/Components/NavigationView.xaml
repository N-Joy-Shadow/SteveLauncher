<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:component="using:SteveLauncher.Views.Components"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             x:Class="SteveLauncher.Views.Components.NavigationView">
    <FlexLayout JustifyContent="SpaceBetween" VerticalOptions="Center">
        <!--왼짝-->
        <StackLayout Orientation="Horizontal" Spacing="8">
            <Label FontSize="48">Steve Launcher</Label>
            <component:MinecraftProfile/>
        </StackLayout>
        <!--오른짝-->
        <StackLayout>
            <ImageButton StyleClass="OutlinedButton" BackgroundColor="Transparent">
                <ImageButton.Source>
                    <FontImageSource FontFamily="MaterialSharp" Glyph="{x:Static uranium:MaterialSharp.Settings}"/>
                </ImageButton.Source>
            </ImageButton>
        </StackLayout>
    </FlexLayout>
</ContentView>